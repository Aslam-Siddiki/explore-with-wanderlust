<% layout("/layouts/boilerplate") %>

<style>
   #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

   .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
    }

    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }

    .filter p {
        font-size: 0.8rem;
    }

    .tax-info {
        display: none;
    }

    .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3rem;
        padding: 0.8rem;
        margin-left: 2rem;
        display: flex;
        align-items: center;
    }

    /* Above extra large: */
    @media(min-width: 1201px) and (max-width: 1250px){
        .tax-toggle{
            display: block;
        }
        .filter{
            display: none;
        }
        .xsm, .sm, .md, .l{
            display: inline-block;
        }
    }

    /* large devices resposivness: */
    @media(min-width: 993px) and (max-width: 1200px){
        .tax-toggle{
            display: block;
            position: relative;
            left: 40rem;
            bottom: 4rem;
        }
        .filter{
            display: none;
        }
        .xsm, .sm, .md{
            display: inline-block;
        }
    }
    

    /* Medium devices responsivness: */
    @media(min-width: 761px) and (max-width: 992px){
        .filter {
            display: none;
        }
        .xsm, .md{
            display: inline-block;
            margin-right: 1.5rem;
        }
        .tax-toggle{
            display: block;
            position: relative;
            left: 28rem;
            bottom: 4rem;
        }
    }


    /* Small Devices responsivness: */
    @media(min-width: 556px) and (max-width: 760px){
        .filter{
            display: none;
        }
        .tax-toggle{
            display: none;
        }
        .xsm, .sm {
            display: block;
            position: relative;
            left: 2rem;
        }
    }

    /* Extra small size responsivness: */
    @media(min-width: 401px) and (max-width: 555px){
        .filter{
            display: none;
        }
        .tax-toggle{
            display: none;
        }
        .xsm {
            display: block;
            position: relative;
            left: 2rem;
        }
    }

    /* Extra extra small */
    @media(max-width: 400px){
        .filter{
            display: none;
        }
        .tax-toggle{
            display: none;
        }
    }

</style>


<div id="filters">
    <div class="filter xsm">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </div>
    <div class="filter xsm">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
    </div>
     <div class="filter xsm">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
    </div>
    <div class="filter xsm">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
    </div>
     <div class="filter sm">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
    </div>
    <div class="filter sm">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Pools</p>
    </div>
    <div class="filter md">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
    </div>
    <div class="filter md">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
    </div>
    <div class="filter l">
        <div><i class="fa-solid fa-snowflake md"></i></div>
        <p>Arctic</p>
    </div>
    <div class="filter l">
        <div><i class="fa-solid fa-tree md"></i></div>
        <p>Forest</p>
    </div>
    <div class="filter xl">
        <div><i class="fa-solid fa-igloo md"></i></div>
        <p>Domes</p>
    </div>
    <div class="filter xl">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
    </div>

    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input 
                class="form-check-input" 
                type="checkbox" 
                role="switch" 
                id="switchCheckDefault"
            >
            <label 
                class="form-check-label" 
                for="switchCheckDefault">
                Display total after taxes
            </label>
        </div>
    </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
    <% for(let listing of listings) { %>
        <a href="/listings/<%= listing._id %>" 
            class="listing-link">
            <div class="card col listing-card">
                <div class="card-img-overlay">
                    <i class="fa-regular fa-heart"></i>
                </div>

                <img 
                    src="<%= listing.image.url %>" 
                    class="card-img-top" 
                    alt="listing_image" 
                    style="height: 20rem"
                >

                <div class="card-body">
                    <p class="card-text"> 
                    <b> 
                        <%= listing.title %> </b>  
                        <br>
                        &#8377; 
                        <%= listing.price.toLocaleString("en-IN") %> / night
                        <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", ()=>{
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo) {
            if(info.style.display != "inline"){
                info.style.display = "inline";
            }
            else {
                info.style.display = "none";
            }
            
        }
    });
</script>

